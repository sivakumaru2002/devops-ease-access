# Required in production: Fernet key for PAT encryption-at-rest in memory/session store.
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
APP_ENCRYPTION_KEY=

# Session/cache tuning
SESSION_TTL_MINUTES=30
CACHE_TTL_SECONDS=120

# Optional Azure OpenAI settings for failure summaries
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Optional MongoDB storage for manually maintained resource cards
MONGODB_URI=
MONGODB_DATABASE=devops_ease_access
MONGODB_COLLECTION=resources
